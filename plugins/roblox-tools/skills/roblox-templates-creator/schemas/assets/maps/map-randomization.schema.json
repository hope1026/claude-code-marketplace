{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "map-randomization.schema.json",
  "title": "Map Randomization Schema",
  "description": "맵 랜덤화 설정 - seed 기반 재현 가능한 랜덤 배치",

  "type": "object",
  "properties": {
    "seedMode": {
      "type": "string",
      "enum": ["auto", "fixed", "session", "daily"],
      "default": "auto",
      "description": "시드 생성 모드: auto(매번 새 시드), fixed(고정 시드), session(세션별), daily(일별)"
    },
    "fixedSeed": {
      "type": ["integer", "null"],
      "default": null,
      "description": "seedMode가 'fixed'일 때 사용할 시드 값"
    },
    "variantCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 5,
      "description": "같은 맵의 변형 수 (시드 풀 크기)"
    },
    "affectedSystems": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["decorations", "spawns", "terrain", "lighting", "weather"]
      },
      "default": ["decorations", "spawns"],
      "description": "랜덤화가 적용되는 시스템"
    }
  },
  "additionalProperties": false,

  "examples": [
    {
      "seedMode": "auto",
      "variantCount": 5,
      "affectedSystems": ["decorations", "spawns"]
    },
    {
      "seedMode": "fixed",
      "fixedSeed": 12345,
      "affectedSystems": ["decorations", "spawns", "terrain"]
    }
  ]
}
